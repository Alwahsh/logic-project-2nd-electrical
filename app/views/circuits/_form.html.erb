<%= form_for @circuit, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :input, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :input, :class => 'text_field', :style => "height:260px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :required, :class => 'control-label' %>
    <div class="controls">
		<%= check_box_tag 'required',1, @circuit.required %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                circuits_path, :class => 'btn' %>
  </div>
<% end %>

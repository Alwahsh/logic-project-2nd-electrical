<%- model_class = Circuit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:input) %>:</strong></dt>
  <dd><%= simple_format(@circuit.input) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:output) %>:</strong></dt>
  <dd><%= simple_format(@circuit.output) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:required) %>:</strong></dt>
  <dd><%= @circuit.required %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              circuits_path, :class => 'btn'  %>
</div>
